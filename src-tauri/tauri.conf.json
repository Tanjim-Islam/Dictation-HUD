{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dictation HUD",
  "version": "1.0.0",
  "identifier": "com.r0ju.dictationhud",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM4OEZEQTBEQzZERDkyQ0EKUldUS2t0M0dEZHFQT0R2WDY2THJwaytSUnNBbEFSclhhN01BZFRtRmNxYmo2S1NBTEFtWGhqa2QK",
      "endpoints": [
        "https://github.com/Tanjim-Islam/Dictation-HUD/releases/latest/download/latest.json"
      ]
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev:frontend",
    "beforeBuildCommand": "npm run build:frontend",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "settings",
        "title": "Dictation HUD Settings",
        "hiddenTitle": true,
        "decorations": false,
        "visible": false,
        "width": 1120,
        "height": 720,
        "center": true
      },
      {
        "label": "hud",
        "title": "HUD",
        "url": "#/hud",
        "width": 600,
        "height": 120,
        "center": false,
        "x": 0,
        "y": 0,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "msi",
      "deb"
    ],
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}

